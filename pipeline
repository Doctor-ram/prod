pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Doctor-ram/prod.git',
                    credentialsId: 'test-jenkins'
            }
        }

        stage('Install Dependencies') {
    steps {
        sh '''
            # Ensure python3 is installed
            which python3 || (echo "Python3 not found!" && exit 1)

            # Install pip if not available
            if ! command -v pip3 > /dev/null; then
                echo "pip not found, installing..."
                python3 -m ensurepip --upgrade
            fi

            # Upgrade pip and install requirements
            python3 -m pip install --upgrade pip
            python3 -m pip install -r host/requirements.txt
        '''
    }
}

        stage('Test') {
            steps {
                sh 'python -m unittest discover || true' // skip if no tests
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t flask-hello-world .'
            }
        }

        stage('Run Container') {
            steps {
                // Stop if already running
                sh '''
                    docker rm -f flask-hello-container || true
                    docker run -d -p 5000:5000 --name flask-hello-container flask-hello-world
                '''
            }
        }
    }

    post {
        success {

            echo 'App is running at http://43.204.96.84:5000'
        }
        failure {
            echo 'Build or run failed.'
        }
    }
}
